# Copy to .env.local for local development

# App
PUBLIC_BASE_URL=http://localhost:3001  # Used in checkout success/cancel URLs
# PORT=3001                             # Optional: port for `npm start` (prod)

# Feature flags
DRY_RUN_LLM=0          # 1 to simulate LLM responses when no API key
ENABLE_IMAGE_GEN=0     # 1 to enable image generation routes

# LLM providers (set at least one)
OPENAI_API_KEY=
AZURE_OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=
TOGETHER_API_KEY=
OPENROUTER_API_KEY=

# Image providers (optional)
STABILITY_API_KEY=
REPLICATE_API_TOKEN=
FAL_KEY=
FAL_API_KEY=

# Storage / Cache (optional but recommended)
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# Payments (required for Stripe checkout/webhooks)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# External pricing providers (optional)
# SERPAPI_API_KEY is used for Google Shopping price lookups (serpapi.com)
SERPAPI_API_KEY=
# RAPIDAPI_KEY_HOMEDEPOT may be used for unofficial Home Depot endpoints (RapidAPI)
RAPIDAPI_KEY_HOMEDEPOT=
